@{
    ViewData["Title"] = "Add Dish";
}

<div class="row">
    
    <div class="col-8">
        <h3>Add Dish</h3>
        <hr/>
        <form method="post">
            <div class="mb-3">
                <label for="rno" class="form-label">Dish Name</label>
                <input type="text" class="form-control" id="rno" placeholder="Yomari">
            </div>
            <div class="mb-3">
                <label for="recipeType" class="form-label">Dish Type</label>
                <select class="form-control" name="type">
                    <option value="Nepalese">Nepalese</option>
                    <option value="Chinese">Chinese</option>
                    <option value="Indian">Indian</option>
                    <option value="Continental">Continental</option>
                    <option value="Sea">Sea</option>
                    <option value="Mexican">Mexican</option>
                    <option value="Italian">Italian</option>
                    <option value="French">French</option>
                    <option value="Korean">Korean</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="Dish details" class="form-label">Dish Description</label>
                <textarea class="form-control" id="Dishdetails" rows="3" placeholder="Say something about the dish"></textarea>
            </div>
            <hr />
            <button type="submit" class="btn btn-success">Add</button>
        </form>
    </div>
    <div class="col-4">
        <h3>Available Dishes</h3>
        <hr/>

        <ul class="list-group">
            <li class="list-group-item">Dish-1</li>
            <li class="list-group-item">Dish-2</li>
            <li class="list-group-item">Dish-3</li>
            <li class="list-group-item">Dish-4</li>
            <li class="list-group-item">Dish-5</li>
        </ul>
    </div>
</div>
